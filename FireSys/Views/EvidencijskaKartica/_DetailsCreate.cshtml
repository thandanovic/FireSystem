@model FireSys.Models.EvidencijskaKarticaViewModel


@Html.HiddenFor(model => model.RemoveKartice)
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="row">
    <div class="form-group col-lg-6">
        @Html.LabelFor(model => model.DatumZaduzenja, htmlAttributes: new { @class = "control-label " })
        <div>
            @Html.EditorFor(model => model.DatumZaduzenja, new { htmlAttributes = new { @Value = Model.DatumZaduzenja.ToString("dd.MM.yyyy"), @class = "date form-control" } })
            @Html.ValidationMessageFor(model => model.DatumZaduzenja, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group col-lg-6">
        @Html.LabelFor(model => model.UserId, htmlAttributes: new { @class = "control-label " })
        <div>
            @*@Html.EditorFor(model => model.UserId, new { htmlAttributes = new { @class = "form-control" } })*@
            @Html.DropDownListFor(x => x.UserId, Model.Korisnici, "Odaberi korisnika", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
        </div>
    </div>
</div>
<div class="row">
    <div class="form-group col-lg-6">
        @Html.LabelFor(model => model.EvidencijskaKarticaTipId, "Tip evidencijske kartice", htmlAttributes: new { @class = "control-label " })
        <div>
            @Html.DropDownListFor(x => x.EvidencijskaKarticaTipId, Model.TippviKartice, "Odaberi tip kartica", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.EvidencijskaKarticaTipId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group col-lg-6">
        @Html.LabelFor(model => model.BrojEvidencijskeKartice, htmlAttributes: new { @class = "control-label " })
        <div>
            @*@Html.EditorFor(model => model.BrojEvidencijskeKartice, new { htmlAttributes = new { @class = "form-control" } })*@
            <div class="row">
                <div class="col-lg-6 no-padding-rg">@Html.TextBoxFor(x => x.RasponOd, new { @class = "form-control", Style = "text-align:right;", @type = "number", @min = "0", @max="9999999999" }) </div>
                <div class="col-lg-6 no-padding-lf">@Html.TextBoxFor(x => x.RasponDo, new { @class = "form-control ", Style = "text-align:right;", @type = "number", @min = "0", @max = "9999999999" })</div>
                @Html.ValidationMessageFor(model => model.RasponOd, "", new { @class = "text-danger" })
                @Html.ValidationMessageFor(model => model.RasponDo, "", new { @class = "text-danger" })
            </div>

        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).on("ready", function () {
        // custom code for greater than
        jQuery.validator.addMethod('greaterThan', function (value, element, param) {
            return (value > jQuery(param).val());
        }, 'Vrijednost raspona nije validna.');

        // custom code for lesser than
        jQuery.validator.addMethod('lesserThan', function (value, element, param) {
            return (value < jQuery(param).val());
        }, 'Vrijednost raspona nije validna.');

        $("#RasponOd").rules("add", {
            lesserThan: "#RasponDo"
        });

        $("#RasponOd").rules("add", {
            lesserThan: "#RasponDo"
        });
    });
    
    
</script>



