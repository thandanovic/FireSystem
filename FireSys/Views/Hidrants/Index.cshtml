@model IEnumerable<FireSys.Entities.Hidrant>

@{
    ViewBag.Title = "Hidranti";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    @Html.ActionLink("Create New", "Create", "", new { @class = "btn btn-success pull-right margin-bottom-10" })
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.HidrantTip.Naziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Instalacija.Naziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Kompletnost.Naziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lokacija.Naziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PromjerMlaznice.PromjerMlazniceId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Oznaka)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HidrostatickiPritisak)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HidrodinamickiPritisak)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Protok)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HidrantTip.Naziv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Instalacija.Naziv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kompletnost.Naziv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lokacija.Naziv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PromjerMlaznice.PromjerMlazniceId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Oznaka)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HidrostatickiPritisak)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HidrodinamickiPritisak)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Protok)
            </td>
            <td>
                @Html.ActionLink(" ", "Edit", new { id = item.HidrantId }, new { @class = "fa fa-edit" }) |
                @Html.ActionLink(" ", "Details", new { id = item.HidrantId }, new { @class = "fa fa-search" }) |
                @Html.ActionLink(" ", "Delete", new { id = item.HidrantId }, new { @class = "fa fa-trash-o" })               
            </td>
        </tr>
    }

</table>
