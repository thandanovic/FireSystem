@model FireSys.Entities.Klijent

<div class="row">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group col-lg-offset-3 col-lg-6">
        @Html.LabelFor(model => model.Naziv, htmlAttributes: new { @class = "control-label" })
        <div>
            @Html.EditorFor(model => model.Naziv, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Naziv, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group col-lg-offset-3 col-lg-6">
        @*@Html.LabelFor(model => model.Kontakt, htmlAttributes: new { @class = "control-label" })*@
        <label for="Kontakt" class="control-label">KONTAKT/KOMENTAR</label>
        <div>
            @Html.TextAreaFor(k => k.Kontakt, new { @class = "form-control", @rows="20" })
            @Html.ValidationMessageFor(model => model.Kontakt, "", new { @class = "text-danger" })
        </div>
    </div>
</div>